<p id="notice"><%= notice %></p>

<h1>Listing Incidents</h1>
<div class="container">
  <span class="btn btn-info btn-sm"> <%= link_to '+New Incident', new_incident_path %></span> <br /><br />
  <table class="table table-bordered table-hover" >
  <thead>
    <tr>
      <th>Issue</th>
      <th>Env</th>
      <th>Region</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incidents.each do |incident| %>
      <tr>
        <td><%= incident.issue %></td>
        <td><%= incident.env %></td>
        <td><%= incident.region %></td>
        <td><%= incident.description %></td>
        <td><%= incident.status %></td>
        <td><%= link_to 'Show', incident %></td>
        <td><%= link_to 'Edit', edit_incident_path(incident) %></td>
        <td><%= link_to 'Destroy', incident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>


